<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.user.android_listview.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List view examples"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android SimpleListItem"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <ListView
            android:id="@+id/lvSimpleListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Using ListView with custom item xml"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>


        <ListView
            android:id="@+id/lvCustomItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Using ViewHolder pattern with ListView"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>


        <ListView
            android:id="@+id/lvViewHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
